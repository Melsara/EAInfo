<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card2"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_weight="1"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingDp"
            android:text="@string/cardview2_title"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/Title2"
            android:layout_toStartOf="@id/Image2"
            android:padding="@dimen/paddingDp"
            android:text="@string/cardview2_text"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/textSize" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/marginDp"
            android:layout_marginEnd="@dimen/marginDp"
            android:layout_marginStart="@dimen/marginDp"
            android:layout_marginTop="@dimen/marginDp"
            android:scaleType="centerCrop"
            android:src="@drawable/mdpidoor2"
            app:civ_border_color="#00000000"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/Link2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/Image2"
            android:layout_marginBottom="@dimen/halfMarginDp"
            android:layout_marginEnd="@dimen/marginDp"
            android:layout_marginStart="@dimen/marginDp"
            android:layout_marginTop="@dimen/oneandhalfMarginDp"
            android:background="@android:color/transparent"
            android:onClick="sendEmail"
            android:text="@string/cardview2_go"
            android:textAllCaps="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/textSize" />

    </RelativeLayout>

</android.support.v7.widget.CardView>